# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
indent_size = 4

[*.py]
profile = black
skip = venv/
skip_glob = **/migrations/*.py

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
